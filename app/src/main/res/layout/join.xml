<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="top"
    android:padding="15dp">

        <!--커뮤니티탭 타이틀-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.05"
            android:text="회원가입"
            android:id="@+id/board_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <!--커뮤니티탭 구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/et_Jid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일 형식으로 입력"
        android:textSize="14sp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="비밀번호"/>
    <EditText
        android:id="@+id/et_Jpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요"
        android:textSize="14sp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="이름"/>
    <EditText
        android:id="@+id/et_Jname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요"
        android:textSize="14sp"
        android:inputType=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="전화번호"/>
    <EditText
        android:id="@+id/et_Jnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:hint="숫자만 입력하세요"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="생년월일"/>
    <EditText
        android:id="@+id/et_Jbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="yymmdd"
        android:textSize="14sp"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="닉네임"/>
    <EditText
        android:id="@+id/et_Jnick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="사용할 닉네임을 입력하세요"
        android:textSize="14sp"
        android:inputType=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_can"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:letterSpacing="-0.05"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="15dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btn_newJoin"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_teal"
            android:letterSpacing="-0.05"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>